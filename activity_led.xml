<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/title_led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/led_title"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/brightness_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_led"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/brightness"
        android:textSize="18sp" />
    <SeekBar
        android:id="@+id/bright_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/brightness_txt"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/bar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bright_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text=""/>

</RelativeLayout>
